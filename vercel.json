{
  "version":2,
  "builds":[
     {
        "src":"public/**",
        "use":"@now/static"
     },
     {
        "src":"index.js",
        "use":"@now/node"
     }
  ],
  "routes":[
     {
        "src":"/",
        "dest":"/index.js"
     },
     {
        "src":"/notify",
        "dest":"/index.js"
     },
     {
        "src":"/public/(.*)",
        "dest":"/public/$1"
     }
  ],
  "crons":[
     {
        "path":"/notify",
        "schedule":"0 10 * * *"
     }
  ],
  "public":true
}
